<resources>

    <!-- Light makes text of action bar black and Light.DarkActionBar makes text white -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Main color -->
        <item name="colorPrimary">@color/teal</item>
        <!-- If isn't status bar color, the status bar color will be primary dark -->
        <item name="colorPrimaryDark">@color/tealDark</item>

        <!-- Status Bar color and windowLightStatusBar true if Status bar is Light and false if it's dark-->
        <item name="android:statusBarColor">@color/whiteDark</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Color Secondary - Color used in FAB and checkboxes, switches ... -->
        <item name="colorSecondary">@color/blue</item>

        <!-- Color On Primary - Color of text and icons in colored components as Buttons and BottomNavigationView -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Color On Seconday - Color of text and icons in colored Secondary components as FAB... -->
        <item name="colorOnSecondary">@color/white</item>

        <!--Color Surface - Color used in CardView Background, Toolbar ... -->
        <item name="colorSurface">@color/white</item>
        <!--Color On Surface - Color used in Elements inside Surface as Toolbar title ... -->
        <item name="colorOnSurface">@color/black</item>

        <item name="colorError">@color/redDark</item>
        <item name="colorOnError">@color/white</item>

        <item name="toolbarStyle">
            @style/Widget.MaterialComponents.Toolbar.Surface
        </item>

        <item name="bottomNavigationStyle">
            @style/Widget.MaterialComponents.BottomNavigationView.Colored
        </item>

        <!-- ActionBarColor Surface or Primary -->
        <item name="actionBarStyle">
            @style/Widget.MaterialComponents.ActionBar.Surface
        </item>

        <item name="textAppearanceHeadline1">
            @style/Headline1Text
        </item>

        <item name="textAppearanceHeadline2">
            @style/Headline2Text
        </item>

        <item name="textAppearanceHeadline3">
            @style/Headline3Text
        </item>

        <item name="textAppearanceHeadline6">
            @style/Headline6Text
        </item>

        <item name="textAppearanceButton">
            @style/ButtonText
        </item>

        <item name="textAppearanceCaption">
            @style/CaptionText
        </item>

        <item name="textAppearanceBody1">
            @style/Body1Text
        </item>

        <item name="textAppearanceBody2">
            @style/Body2Text
        </item>

        <item name="textAppearanceOverline">
            @style/OverlineText
        </item>
    </style>

    <style name="ButtonText" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="Headline1Text" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="Headline2Text" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="Headline3Text" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="Headline6Text" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="CaptionText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="Body1Text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="Body2Text" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="OverlineText" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/montserrat</item>
    </style>
</resources>
