<resources>

    <!-- Light makes text of action bar black and Light.DarkActionBar makes text white -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Main color -->
        <item name="colorPrimary">@color/teal</item>
        <!-- If isn't status bar color, the status bar color will be primary dark -->
        <item name="colorPrimaryDark">@color/tealDark</item>

        <!-- Status Bar color and windowLightStatusBar true if Status bar is Light and false if it's dark-->
        <item name="android:statusBarColor">@color/whiteDark</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Color Secondary - Color used in FAB and checkboxes, switches ... -->
        <item name="colorSecondary">@color/blue</item>

        <!--Color On Primary - Color of text and icons color in colored components as Buttons and BottomNavigationView -->
        <item name="colorOnPrimary">@color/white</item>
        <!--Color On Seconday - Color of text and icons color in colored Secondary components as FAB... -->
        <item name="colorOnSecondary">@color/white</item>

        <!--Color Surface - Color used in CardView Background, Toolbar ... -->
        <item name="colorSurface">@color/white</item>
        <!--Color On Surface - Color used in Elements inside Surface as Toolbar title ... -->
        <item name="colorOnSurface">@color/black</item>

        <item name="colorError">@color/redDark</item>
        <item name="colorOnError">@color/white</item>

        <item name="toolbarStyle">
            @style/Widget.MaterialComponents.Toolbar.Surface
        </item>

        <item name="bottomNavigationStyle">
            @style/Widget.MaterialComponents.BottomNavigationView.Colored
        </item>

        <!-- ActionBarColor Surface or Primary -->
        <item name="actionBarStyle">
            @style/Widget.MaterialComponents.ActionBar.Surface
        </item>

        <item name="shapeAppearanceSmallComponent">
            @style/MyShape
        </item>

        <item name="shapeAppearanceMediumComponent">
            @style/MyShape1
        </item>

        <item name="shapeAppearanceLargeComponent">
            @style/MyShape2
        </item>
    </style>

    <style name="Shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>


    <style name="MyShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamilyTopRight">cut</item>
    </style>

    <style name="MyShape1" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyTopRight">cut</item>
    </style>

    <style name="MyShape2" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamilyTopRight">cut</item>
    </style>

</resources>
